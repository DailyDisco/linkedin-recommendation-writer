# LinkedIn Recommendation Writer Backend - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Environment Configuration
# ============================================
ENVIRONMENT=development
# Options: development, staging, production

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true
API_WORKERS=1

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/github_recommender
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_TIMEOUT=5
REDIS_DEFAULT_TTL=3600

# ============================================
# External API Keys
# ============================================
# Get your GitHub token from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_RATE_LIMIT=5000

# Get your Google Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# Initialization Flags
# ============================================
INIT_DB=true
RUN_MIGRATIONS=false

# ============================================
# CORS Configuration
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ============================================
# Security Configuration
# ============================================
# Auto-generated if not provided
SECRET_KEY=your_secret_key_here

# ============================================
# Rate Limiting Configuration
# ============================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# ============================================
# Feature Flags
# ============================================
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=false
ENABLE_TRACING=false
