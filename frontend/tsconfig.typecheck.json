{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "CommonJS",
    "allowImportingTsExtensions": false,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "app/types/**/*"
  ],
  "exclude": ["node_modules", "build", ".react-router"]
}
