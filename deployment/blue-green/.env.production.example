# =============================================================================
# LinkedIn Recommendation Writer - Production Environment
# =============================================================================
# Copy this file to .env.production and fill in your actual values.
# NEVER commit .env.production to version control!
# =============================================================================

# --- Path to Repository (for docker-compose build context) ---
REPO_PATH=/home/day/Programming_Projects_Modern/github_repo_linkedin_recommendation_writer_app

# --- Core Application Settings ---
ENVIRONMENT=production

# --- API Configuration ---
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false
API_WORKERS=4
LOG_LEVEL=INFO

# --- Database Configuration (PostgreSQL) ---
# Internal Docker network URL (container-to-container via linkedin-internal network)
DATABASE_URL="postgresql+asyncpg://postgres:CHANGE_ME_STRONG_PASSWORD@linkedin-recommender-postgres:5432/github_recommender"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# PostgreSQL credentials
POSTGRES_DB=github_recommender
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# --- Redis Configuration ---
REDIS_URL="redis://linkedin-recommender-redis:6379/0"
REDIS_TIMEOUT=5
REDIS_DEFAULT_TTL=3600

# --- External API Keys ---
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_YOUR_GITHUB_TOKEN_HERE
GITHUB_RATE_LIMIT=5000

# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# --- Security Settings ---
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_GENERATE_A_NEW_SECRET_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ALGORITHM=HS256

# --- CORS Configuration ---
# Your production domain (update with your actual domain)
ALLOWED_ORIGINS="https://your-domain.com,https://www.your-domain.com"

# --- Rate Limiting ---
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# --- Feature Flags ---
ENABLE_METRICS=true
ENABLE_TRACING=false

# --- Initialization Flags ---
INIT_DB=true
RUN_MIGRATIONS=false

# --- Frontend Configuration ---
VITE_API_BASE_URL=""
NODE_ENV=production
VITE_GA4_MEASUREMENT_ID=
VITE_ENABLE_ANALYTICS=true
