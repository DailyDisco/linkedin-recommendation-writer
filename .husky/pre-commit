#!/usr/bin/bash
set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Check if we're in a git repository
if ! git rev-parse --git-dir >/dev/null 2>&1; then
  echo -e "${RED}âŒ Not in a git repository${NC}"
  exit 1
fi

# Check if there are any staged files
if [ -z "$(git diff --cached --name-only 2>/dev/null)" ]; then
  echo -e "${YELLOW}âš ï¸  No staged files found. Skipping pre-commit checks.${NC}"
  exit 0
fi

# Detect what types of files changed
HAS_FRONTEND=$(git diff --cached --name-only | grep -E "\.(ts|tsx|js|jsx)$" || echo "")
HAS_BACKEND=$(git diff --cached --name-only | grep -E "\.py$" || echo "")
HAS_CONFIG=$(git diff --cached --name-only | grep -E "\.(json|yml|yaml|toml|md)$" || echo "")

echo -e "${PURPLE}ğŸ“‹ Changed file types detected:${NC}"
[ -n "$HAS_FRONTEND" ] && echo -e "   ${CYAN}Frontend files:${NC} âœ…" || echo -e "   ${CYAN}Frontend files:${NC} âŒ"
[ -n "$HAS_BACKEND" ] && echo -e "   ${CYAN}Backend files:${NC} âœ…" || echo -e "   ${CYAN}Backend files:${NC} âŒ"
[ -n "$HAS_CONFIG" ] && echo -e "   ${CYAN}Config files:${NC} âœ…" || echo -e "   ${CYAN}Config files:${NC} âŒ"

failed=0

# Backend checks (if backend files changed)
if [ -n "$HAS_BACKEND" ]; then
  echo -e "\n${PURPLE}ğŸ”§ Running backend checks...${NC}"

  # Check if backend directory exists
  if [ ! -d "backend" ]; then
    echo -e "${RED}âŒ Backend directory not found${NC}"
    exit 1
  fi

  # Check if Python tools are available
  if ! python3 -m isort --version >/dev/null 2>&1; then
    echo -e "${YELLOW}âš ï¸  Python tools (isort, black, flake8) not found in system Python${NC}"
    echo -e "${CYAN}ğŸ’¡ Backend is likely containerized. Skipping Python checks.${NC}"
    echo -e "${CYAN}   To enable checks, install tools: pip install isort black flake8${NC}"
  else
    # Run backend import sorting
    if ! (cd backend && python3 -m isort --check-only --diff app/); then
      echo -e "${YELLOW}âš ï¸  Python import sorting check failed${NC}"
      echo -e "${BLUE}ğŸ”§ Running isort to fix imports...${NC}"
      if (cd backend && python3 -m isort app/); then
        echo -e "${GREEN}âœ… Python import sorting completed successfully${NC}"
        echo -e "${YELLOW}ğŸ“ Staged files have been updated with sorted imports${NC}"
      else
        echo -e "${RED}âŒ Python import sorting failed${NC}"
        failed=1
      fi
    else
      echo -e "${GREEN}âœ… Python import sorting check completed successfully${NC}"
    fi

    # Run backend formatting check
    if ! (cd backend && python3 -m black --check --diff app/); then
      echo -e "${YELLOW}âš ï¸  Python formatting check failed${NC}"
      echo -e "${BLUE}ğŸ”§ Running black to fix formatting...${NC}"
      if (cd backend && python3 -m black app/); then
        echo -e "${GREEN}âœ… Python formatting fix completed successfully${NC}"
        echo -e "${YELLOW}ğŸ“ Staged files have been updated with formatted Python code${NC}"
      else
        echo -e "${RED}âŒ Python formatting fix failed${NC}"
        failed=1
      fi
    else
      echo -e "${GREEN}âœ… Python formatting check completed successfully${NC}"
    fi

    # Run backend linting check
    if ! python3 -m flake8 --max-line-length=250 --extend-ignore=E203,W503 backend/app/; then
      echo -e "${RED}âŒ Python linting check failed${NC}"
      echo -e "${YELLOW}ğŸ’¡ Fix the linting issues above${NC}"
      failed=1
    else
      echo -e "${GREEN}âœ… Python linting check completed successfully${NC}"
    fi
  fi
fi

# Frontend checks (if frontend files changed)
if [ -n "$HAS_FRONTEND" ]; then
  echo -e "\n${PURPLE}ğŸ¨ Running frontend checks...${NC}"

  # Check if frontend directory and package.json exist
  if [ ! -d "frontend" ] || [ ! -f "frontend/package.json" ]; then
    echo -e "${RED}âŒ Frontend directory or package.json not found${NC}"
    exit 1
  fi

  # Try to load nvm/fnm if npm isn't available
  if ! command -v npm &>/dev/null; then
    # Try nvm
    if [ -f "$HOME/.nvm/nvm.sh" ]; then
      source "$HOME/.nvm/nvm.sh"
    # Try fnm
    elif command -v fnm &>/dev/null; then
      eval "$(fnm env)"
    # Try volta
    elif [ -d "$HOME/.volta" ]; then
      export PATH="$HOME/.volta/bin:$PATH"
    fi
  fi

  # Check if npm is available
  if ! command -v npm &>/dev/null; then
    echo -e "${YELLOW}âš ï¸  npm not found in PATH${NC}"
    echo -e "${CYAN}ğŸ’¡ Frontend is likely using a Node version manager (nvm/fnm/volta).${NC}"
    echo -e "${CYAN}   Skipping frontend checks. Run manually: cd frontend && npm run lint${NC}"
  else
    # Run frontend formatting fix
    if ! (cd frontend && npm run prettier:fix); then
      echo -e "${YELLOW}ğŸ’¡ Frontend formatting fix failed${NC}"
      failed=1
    else
      echo -e "${GREEN}âœ… Frontend formatting fix completed successfully${NC}"
    fi

    # Run frontend linting
    if ! (cd frontend && npm run lint); then
      echo -e "${YELLOW}ğŸ’¡ Fix the linting issues above${NC}"
      failed=1
    else
      echo -e "${GREEN}âœ… Frontend linting completed successfully${NC}"
    fi
  fi
fi

# Final status report
echo -e "\n${PURPLE}ğŸ“Š Pre-commit Summary:${NC}"

if [ $failed -eq 1 ]; then
  echo -e "${RED}âŒ Some checks failed!${NC}"
  echo -e "${YELLOW}ğŸ”§ Please fix the issues above and try again.${NC}"
  exit 1
else
  echo -e "${GREEN}âœ… All checks passed successfully!${NC}"
  echo -e "${CYAN}ğŸ‰ Your code is ready for commit.${NC}"
fi
